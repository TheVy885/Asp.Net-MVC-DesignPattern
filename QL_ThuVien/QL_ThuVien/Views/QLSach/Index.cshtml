@model IEnumerable<QL_ThuVien.Models.Sach>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Các Sách</h2>

<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }

    <style >
    table {
        width: 1000px;
    }
</style>
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "QLSach"))
{
    <input type="text" name="tensach" />
    <input type="submit" value="Tìm" />
    <table class="table">
        <tr>
            <th>
                ID Sách
            </th>
            <th>
                Tên Sách
            </th>
            <th>
                Hình Ảnh
            </th>

            <th>
                Thể Loại
            </th>
            <th>
                Mô Tả
            </th>
            <th>
                Tác Giả
            </th>
            <th>
                Ngày Xuất Bản
            </th>

            <th>
                Số Lượng
            </th>
            <th>
                Chức năng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDSach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSach)
                </td>
                <td>
                    <img src="@Url.Content(item.HinhAnh)" style="width:150px; height:150px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheLoai)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TacGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayXuatBan)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDSach }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IDSach }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDSach }) |
                    @Html.ActionLink("Duplicate", "Duplicate", new { id = item.IDSach }) |
                </td>
            </tr>
        }

    </table>    
}