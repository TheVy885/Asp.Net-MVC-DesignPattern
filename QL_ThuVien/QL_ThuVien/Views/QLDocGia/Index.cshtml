@model IEnumerable<QL_ThuVien.Models.DocGia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    th {
        text-align: center;
    }

    td {
        text-align: center;
    }
</style>

<h2>Danh Sách Đọc Giả</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "QLDocGia"))
{
    <input type="text" name="_name" />
    <input type="submit" value="Tìm" />
    <table class="table">
        <tr>
            <th>
               Mã Độc Giả
            </th>
            <th>
                Tên Đọc Giả
            </th>
            <th>
                Điện Thoại
            </th>
            <th>
               Địa Chỉ
            </th>
            
            <th>
                Chức Năng
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDDG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenDG)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DienThoai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDDG }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IDDG }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDDG })
                </td>
            </tr>
        }

    </table>
}

