@using QL_ThuVien.Models

@{ 
    ThuVienEntities3 data = new ThuVienEntities3();
    var cate = data.TheLoais.ToList();
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/layoutHome.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    

</head>
<style>
    


    .footer{
        background-color:black;
        color:white;

    }

    .column {
        float: left;
        width: 33.33%;
        text-align: center;
        padding-top: 30px;
        background-color: black;
        color: white;
    }
    .a{
        text-align:left
    }



    /*css menu*/
    body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
        overflow: hidden;
        background-color: #333;
    }

        .topnav a {
            float: left;
            display: block;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            .topnav a.active {
                background-color: #04AA6D;
                color: white;
            }

        .topnav .icon {
            display: none;
        }

    /*css slideshow*/

    * {
        box-sizing: border-box;
    }

    body {
        font-family: Verdana, sans-serif;
    }

    .mySlides {
        display: none;
    }

    img {
        vertical-align: middle;
    }

    /* Slideshow container */
    .slideshow-container {
        max-width: 1000px;
        position: relative;
        margin: auto;
    }

    /* Caption text */
    .text {
        color: #f2f2f2;
        font-size: 15px;
        padding: 8px 12px;
        position: absolute;
        bottom: 8px;
        width: 100%;
        text-align: center;
    }

    /* Number text (1/3 etc) */
    .numbertext {
        color: #f2f2f2;
        font-size: 12px;
        padding: 8px 12px;
        position: absolute;
        top: 0;
    }

    /* The dots/bullets/indicators */
    .dot {
        height: 15px;
        width: 15px;
        margin: 0 2px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
        transition: background-color 0.6s ease;
    }

    .active {
        background-color: #717171;
    }

    /* Fading animation */
    .fade {
        -webkit-animation-name: fade;
        -webkit-animation-duration: 1.5s;
        animation-name: fade;
        animation-duration: 1.5s;
    }
</style>
<body>
    <div class="">
        <!-- Header -->
        <header>
            <div class="banner">
                <img src="~/Content/image/panner.jpg" alt="banner" />
            </div>
            


            <div class="topnav" id="myTopnav">
                
                <a href="@Url.Action("Index","Home")" title="Go to homepage">Trang Chủ</a>
                <a href="">Giới Thiệu</a>
                <a href="">Quy Trình Mượn Sách</a>
                <a href="">Nội Quy</a>
                <a href="">Lịch Cập Nhật Sách</a>
                <a href="@Url.Action("Index","Login")" title="Login">Login/Register</a>

            </div>

            


        </header>

        <div class="line-20"></div>
        <content>
            <div class="left-content">



                <div class="category">
                    <div class="category-left-title">
                        category
                    </div>
                    <ul>
                        <li><a href="#" title="">All</a></li>
                        @foreach (var item in cate)
                        {
                            <li><a href="#xxx" title="">@item.NameCate</a></li>
                        }
                    </ul>
                </div>
            </div>
           


            <div class="slideshow-container">

                <div class="mySlides fade">

                    <img src="~/Content/Image/sach1.png" style="width:90%;">

                </div>

                <div class="mySlides fade">

                    <img src="~/Content/Image/sach2.jpg" style="width:90%">

                </div>

                <div class="mySlides fade">

                    <img src="~/Content/Image/thuvien.png" style="width:90%">

                </div>

                <div class="mySlides fade">

                    <img src="~/Content/Image/sach3.png" style="width:90%">

                </div>

            </div>
            <br>

            <div style="text-align:center">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
            </div>

            <script>
var slideIndex = 0;
showSlides();

function showSlides() {
  var i;
  var slides = document.getElementsByClassName("mySlides");
  var dots = document.getElementsByClassName("dot");
  for (i = 0; i < slides.length; i++) {
    slides[i].style.display = "none";
  }
  slideIndex++;
  if (slideIndex > slides.length) {slideIndex = 1}
  for (i = 0; i < dots.length; i++) {
    dots[i].className = dots[i].className.replace(" active", "");
  }
  slides[slideIndex-1].style.display = "block";
  dots[slideIndex-1].className += " active";
  setTimeout(showSlides, 2000); // Change image every 2 seconds
}
            </script>






            <div class="right-content">
                @RenderBody()
            </div>
            <div class="line-20"></div>
        </content>





    </div>


    <!--Footer-->
    @Html.Partial("Footer");


</body>
</html>
